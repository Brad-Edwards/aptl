[Unit]
Description=Install Reverse Engineering Tools Lab Services on First Boot
After=multi-user.target
ConditionPathExists=!/var/ossec/.reverse_tools_installed

[Service]
Type=oneshot
ExecStart=/opt/purple-team/scripts/install-all.sh
EnvironmentFile=/etc/environment.wazuh
RemainAfterExit=yes
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target