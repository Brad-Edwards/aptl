[Unit]
Description=Install Purple Team Lab Services on First Boot
After=multi-user.target
ConditionPathExists=!/var/ossec/.minetest_server_installed

[Service]
Type=oneshot
ExecStart=/opt/purple-team/scripts/minetest-server-install.sh
EnvironmentFile=/etc/environment.wazuh
RemainAfterExit=yes
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target