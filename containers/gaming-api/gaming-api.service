[Unit]
Description=Gaming API Server (Rust)
After=network.target

[Service]
Type=simple
User=labadmin
Group=labadmin
WorkingDirectory=/opt/gaming-api
ExecStart=/opt/gaming-api/target/release/gaming-api-server
Restart=always
RestartSec=5
Environment=PORT=14567
Environment=SIEM_IP=172.20.0.10

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=gaming-api

[Install]
WantedBy=multi-user.target