{
  "version": "1.0.0",
  "lab": {
    "name": "aptl-local",
    "network_subnet": "172.20.0.0/16"
  },
  "containers": {
    "wazuh": {
      "container_name": "aptl-wazuh",
      "container_ip": "172.20.0.10",
      "ssh_key": "~/.ssh/aptl_lab_key",
      "ssh_user": "root",
      "enabled": true
    },
    "victim": {
      "container_name": "aptl-victim", 
      "container_ip": "172.20.0.20",
      "ssh_key": "~/.ssh/aptl_lab_key",
      "ssh_user": "labadmin",
      "enabled": true
    },
    "kali": {
      "container_name": "aptl-kali",
      "container_ip": "localhost", 
      "ssh_key": "~/.ssh/aptl_lab_key",
      "ssh_user": "kali",
      "ssh_port": 2023,
      "enabled": true
    }
  },
  "mcp": {
    "server_name": "aptl-local-mcp",
    "allowed_networks": ["172.20.0.0/16", "127.0.0.0/8"],
    "max_session_time": 3600,
    "audit_enabled": true,
    "log_level": "info"
  }
}