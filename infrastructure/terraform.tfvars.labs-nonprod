# APTL Configuration for labs-nonprod deployment
# This file is used by GitHub Actions to deploy APTL to the labs-nonprod account

aws_region         = "us-east-2"
vpc_cidr          = "10.0.0.0/16"
subnet_cidr       = "10.0.1.0/24"
availability_zone = "us-east-2a"
allowed_ip        = "75.157.183.83/32"  # Restricted to your IP only
key_name          = "aptl-key-us-east-2"

# SIEM Configuration
enable_siem = true
siem_type = "splunk"
splunk_ami = "ami-025866c5c3d9ee9dd"  # RHEL 8.8 x86_64 (Splunk compatible)
splunk_instance_type = "c5.4xlarge"
qradar_ami          = "ami-025866c5c3d9ee9dd"  # RHEL 8.8 x86_64 (qRadar compatible)
qradar_instance_type = "t3a.2xlarge"

# Instance Configuration
enable_victim = true
enable_kali   = true
enable_lab_container_host = false  # Not using containers for this deployment
victim_ami        = "ami-025866c5c3d9ee9dd"  # RHEL 8.8 x86_64
victim_instance_type = "t3.micro"
kali_ami          = "ami-0cf57d4e3b64b608b"  # Kali Linux 2025.1d
kali_ami_alias    = "/aws/service/marketplace/prod-tsqyof4l3a3aa/2025.1d-amd64"
kali_product_code = "7lgvy7mt78lgoi4lant0znp5h"
kali_instance_type = "t3.micro"

# Lab Container Host (disabled for standalone deployment)
lab_container_host_ami = "ami-08a6efd148b1f7504"  # Amazon Linux 2023
lab_container_host_instance_type = "t3.large"

# AWS profile not used in GitHub Actions (uses IAM role instead)
# aws_profile = ""

# API Keys (leave empty - not needed for basic deployment)
openai_api_key    = ""
openai_model      = "gpt-4"
anthropic_api_key = ""
claude_model      = "claude-3-sonnet-20240229"

# Project tags
project_name = "aptl"
environment  = "labs-nonprod"