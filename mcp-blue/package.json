{
    "name": "aptl-wazuh-mcp-server",
    "version": "0.1.0",
    "description": "Model Context Protocol server for APTL Wazuh blue team operations",
    "private": true,
    "type": "module",
    "bin": {
        "APTL Wazuh MCP Server": "./build/index.js"
    },
    "files": [
        "build"
    ],
    "scripts": {
        "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
        "prepare": "npm run build",
        "watch": "tsc --watch",
        "inspector": "npx @modelcontextprotocol/inspector build/index.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write src/**/*.ts",
        "format:check": "prettier --check src/**/*.ts"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "0.6.0",
        "zod": "^3.25.49"
    },
    "devDependencies": {
        "@types/node": "^20.11.24",
        "@typescript-eslint/eslint-plugin": "^8.41.0",
        "@typescript-eslint/parser": "^8.41.0",
        "eslint": "^9.34.0",
        "prettier": "^3.6.2",
        "typescript": "^5.3.3",
        "vitest": "^1.0.0"
    }
}
