[Unit]
Description=Install Kali Red Team Lab Services on First Boot
After=multi-user.target
ConditionPathExists=!/var/ossec/.all_installed

[Service]
Type=oneshot
ExecStart=/opt/kali-redteam/scripts/install-all.sh
EnvironmentFile=/etc/environment.wazuh
RemainAfterExit=yes
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target